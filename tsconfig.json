{
  "//": "https://www.typescriptlang.org/docs/handbook/tsconfig-json.html",
	"//about-target": "upgrade target from ES2018 to ES2020 to be able to use import.meta",
  "//comment//": "was having trouble with Could not find a declaration file for module 'pinia', this fixed it ->https://stackoverflow.com/a/58232530",
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
		"noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "pinia-plugin-persist",
      "jest"
    ],
    "paths": {
      "@/*": [ "src/*" ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "./**/.eslintrc.js",
    "./**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "./**/*.js",
    "tests/**/*.ts",
    "tests/**/*.tsx"
   ],
  "exclude": [
    "node_modules",
  ]
}
